@model Projeto.Presentation.Mvc.Models.EstoqueEdicaoModel

@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Atualizar dados do Estoque</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.IdEstoque)

    <label>Nome do Estoque</label>
    @Html.TextBoxFor(model => model.Nome, new
    {
        @class = "form-control col-md-4",
        @autocomplete = "off",
        @placeholder = "Digite aqui"
    })

    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.Nome)
    </span>
    <br />

    <label>Data de Criação</label>
    @Html.TextBoxFor(model => model.DataCriacao, new
    {
        @class = "form-control col-md-4",
        @autocomplete = "off",
        @placeholder = "Digite aqui"
    })

    <span class="text-danger">
        @Html.ValidationMessageFor(model => model.DataCriacao)
    </span>
    <br />

    <input type="submit" value="Atualizar estoque" class="btn btn-primary"/>
}

